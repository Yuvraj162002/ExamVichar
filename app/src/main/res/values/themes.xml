<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StudentsApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
               <!-- Primary brand color. -->
        <item name="colorPrimary">#E04E1258</item>
        <item name="colorPrimaryVariant">#4E1258</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:color">@color/purple_royal</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="android:backgroundSplit">@color/purple_royal</item>




        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_royal</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>

        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LoaderStyle" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">50%</item>
        <item name="android:windowMinWidthMinor">50%</item>
    </style>

    <style name="CustomDialogTheme2" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/CustomShape</item>
    </style>

    <style name="CustomShape2" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">2dp</item>
    </style>

    <style name="CustomDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/CustomShape</item>
    </style>

    <style name="CustomShape" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/outline_spinner</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/purple_royal</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>


   </resources>